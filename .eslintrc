{
  "env": {
    "browser": true,
    "node": false
  },
  "ecmaFeatures": {
    "jsx": true,
    "arrowFunctions": true,
    "forOf": 1
  },
  "rules": {
    "semi": 2,
    "quotes":[1, "single"],
    "eol-last": 0,
    "no-console": 0,
    "curly": [0, "multi"],
    "no-alert": 0,
    "consistent-return": 0,
    "no-duplicate-case": 0, // doesn't detect variable cases so had to disable
    "no-irregular-whitespace": 0,
    "no-trailing-spaces": 0,
    "no-use-before-define": [1, "nofunc"],
  },
  "globals": {
    "Peerio": true,
    "React":true,
    "moment":true,
    "uuid":true,
    "Hammer":true,
    "_":true,
    "Identicon": true,
    "TweenLite":true,
    "PouchDB":true
  }
}
